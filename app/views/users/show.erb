<div class="row">
  <div class="col-sm-2 col-sm-offset-2">
    <h1><%= @user.name %></h1>
  </div>

  <div class="col-sm-6">
    <% if @user.events.any? %>
        <% @user.events.each do |event| %>
            <%= event.id %> | <%= event.description %> <br>
        <% end %>
    <% end %>
  </div>
</div>

